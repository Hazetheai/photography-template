<!DOCTYPE html>
<html lang="en" >
  {% include "./partials/siteHead.njk" %}

  <body >
    {# <div class="hidden">
      {% include './partials/sprite.svg' %}
    </div> #}
    <div data-barba="wrapper">
      <div data-barba="container"  {% if barbaNamespace %} data-barba-namespace="{{ barbaNamespace }}" {% endif %} {% if section %} data-current="{{ section }}"{% endif %} >
        {% if page.url == '/' %}
          {% set showHomeLink = false %}
        {% else %}
          {% set showHomeLink = true %}
        {% endif %}

        {% include "./partials/header.njk" %}
        <div asscroll-container  >
          <div class="scroll-wrap">

            {% block content %}{% endblock %}
            {% if isHorizontal != true %}
              {% include "./partials/footer.njk" %}
            {% endif %}

          </div>

          {% if isHorizontal == true %}
            {% include "./partials/footer.njk" %}
          {% endif %}
        </div>
        <!-- scroll divs -->
      </div>
    </div>
    <!-- end barba -->
    <div class="curtain"></div>
    <div id="container"></div>

    <!--JS-->
    {% if version.js | length == 0 %}
      {% set JsVersion = '' %}
    {% else %}
      {% set JsVersion = version.js %}
    {% endif %}
    <script type="module" src="/index{{ JsVersion }}.js"></script>
    <script  src="/js/scripts/scripts.min.js"></script>
    {# <script  src="/js/components/_1_reveal-effects.js"></script>
    <script  src="/js/components/_1_masonry.js"></script> #}
    {#
    <script  src="/js/components/_1_swipe-content.js"></script>
    <script  src="/js/components/_2_image-zoom.js"></script> #}
  </body>
</html>